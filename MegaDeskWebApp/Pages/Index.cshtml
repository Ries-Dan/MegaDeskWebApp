@page
@model MegaDeskWebApp.Pages.MegaDesk.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<form>
    <p>
        <select asp-for="QuoteName" asp-items="Model.Quotes">
            <option value="">All</option>
        </select>

        <input type="text" name="SearchString">
        <input type="submit" value="Search" />
        <a href="index">Clear Search</a>
    </p>
</form>
<p>
    <a asp-page="MegaDesk/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].CustName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].DeskWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].DeskDepth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].DeskDrawers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].RushDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].DeskQuoteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].DeskQuoteTotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DeskQuote.Count == 0)
        {
            <tr>
                <td colspan="3" style="color: red">
                    No Matches Found.
                </td>
            </tr>
        }

        else {
            @foreach (var item in Model.DeskQuote)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeskWidth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeskDepth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeskDrawers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RushDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeskQuoteDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeskQuoteTotal)
                </td>
                <td>
                    <a asp-page="./MegaDesk/Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./MegaDesk/Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./MegaDesk/Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
            }
        }
    </tbody>
</table>
